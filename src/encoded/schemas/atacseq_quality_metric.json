{
    "description": "Schema for reporting quality metrics calculated by the ATAC-seq processing pipeline",
    "id": "/profiles/atacseq_quality_metric.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["step_run", "award", "lab"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "quality_metric.json#/properties" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted"},
        { "$ref": "mixins.json#/aliases"},
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/standard_status"},
        { "$ref": "mixins.json#/assay" }
   ],
    "dependencies": {
        "TSS_enrichment": ["TSS_annotation"]
    },
    "properties": {
        "schema_version": {
            "default": "5"
        },
        "alignment_rate": {
            "title": "Alignment rate",
            "description": "The alignment rate output by Bowtie 2 and expressed as a percentage.",
            "type": "number",
            "minimum": 0,
            "maximum": 100
        },
        "mitochondrial_read_fraction": {
            "title": "Mitochondrial read fraction",
            "description": "The fraction of total reads that are mitochondrial.",
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        "post_filtering_read_depth": {
            "title": "Post-filtering read depth",
            "description": "Read depth after removal of duplicate and mitochondrial reads. Includes unique and multimapping reads.",
            "type": "integer"
        },
        "num_naive_overlap_peaks": {
            "title": "Number of naive overlap peaks",
            "description": "Number of naive overlap peaks.",
            "type": "integer"
        },
        "FRiP": {
            "title": "FRiP score",
            "description": "Fraction of reads in called raw unthresholded peak regions.",
            "type": "number"
        },
        "has_NFR_peak": {
            "title": "NFR peak flag",
            "description": "Boolean flag for presence of nucleosome-free region (NFR) peak.",
            "type": "boolean"
        },
        "has_mononucleosome_peak": {
            "title": "Mononucleosome peak flag",
            "description": "Boolean flag for presence of mononucleosome peak detected in the fragment length distribution.",
            "type": "boolean"
        },
        "TSS_enrichment": {
            "title": "TSS enrichment",
            "description": "Boolean flag for enrichment of signal near transcription start site (TSS).",
            "comment": "Please refer to https://www.encodeproject.org/data-standards/terms/#enrichment for the definition",
            "type": "number"
        },
        "TSS_annotation": {
            "title": "Genome annotation",
            "description": "GENCODE/RefSeq version of the reference TSS annotation used.",
            "comment": "Applies to files created using annotations.",
            "type": "string",
            "enum": [
                "None",
                "M2",
                "M3",
                "M4",
                "M7",
                "V3c",
                "V7",
                "V10",
                "V19",
                "V22",
                "V24"
                ]
        },
        "attachment": {
            "title": "QC metric document metadata",
            "type": "object",
            "additionalProperties": false,
            "attachment": true,
            "formInput": "file",
            "properties": {
                "download": {
                    "title": "File Name",
                    "type": "string"
                },
                "href": {
                    "comment": "Internal webapp URL for document file",
                    "type": "string"
                },
                "type": {
                    "title": "MIME type",
                    "type": "string",
                    "enum": [
                        "application/pdf",
                        "text/plain",
                        "text/tab-separated-values",
                        "image/jpeg",
                        "image/png",
                        "image/tiff",
                        "image/gif",
                        "text/html"                       
                     ]
                },
                "size": {
                    "title": "File size",
                    "type": "integer"
                },
                "md5sum": {
                    "format": "md5sum",
                    "type": "string",
                    "title": "MD5sum"
                },
                "width": {
                    "title": "Image width",
                    "type": "integer"
                },
                "height": {
                    "title": "Image height",
                    "type": "integer"
                }
            }
        }
    },
    "changelog": "/profiles/changelogs/atacseq_quality_metric.md"
}